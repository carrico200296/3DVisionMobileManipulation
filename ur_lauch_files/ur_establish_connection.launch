<launch>
    <!-- LAUNCH FILE to establish connection with the INTEL REALSENSE camera -->
    <param name="/use_sim_time" value="true"/>
    <arg name="color_width" default="1280"/>
    <arg name="color_height" default="720"/>
    <arg name="filters" default="pointcloud"/>

    <include file="$(find realsense2_camera)/launch/rs_camera.launch">
        <arg name="color_width" value="$(arg color_width)"/>
        <arg name="color_height" value="$(arg color_height)"/>
        <arg name="filters" value="$(arg filters)"/>
    </include>

    <!-- LAUNCH FILE to establish connection with UR robot using the UR ROS DRIVER -->
    <arg name="robot_ip" default="192.168.10.20"/>
    <arg name="kinematics_config" default="/home/$USER/ros_ws/ur_driver_ws/src/Universal_Robots_ROS_Driver/ur_calibration/etc/ur5e_fixed_station_calibration.yaml"/>

    <include file="$(find ur_robot_driver)/launch/ur5e_bringup.launch">
        <arg name="robot_ip" value="$(arg robot_ip)"/>
        <arg name="kinematics_config" value="$(arg kinematics_config)"/>
    </include>
    
    <!--
    <include file="$(find ur_calibration)/launch/rs_calibration.launch">
        <arg name="robot_ip" value="$(arg robot_ip)"/>
        <arg name="kinematics_config" value="$(arg kinematics_config)"/>
    </include>-->

    <!--<node pkg="rviz" type="rviz" name="rviz" args="-d $(find pose_estimation_pkg)/rviz/rs_stream_depth.rviz"/>-->

</launch>

